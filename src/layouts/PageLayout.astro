---
import ThemeToggleButton from '~/components/ThemeToggleButton.astro'
import { appInfo } from '~/utils'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<style is:global lang="scss">
	.markdown {
		h1,
		h2,
		h3 {
			@apply mb-2 mt-1 select-none;
		}

		img {
			@apply select-none;
		}

		h1 {
			@apply text-3xl;
		}
		h2 {
			@apply text-2xl;
		}
		h3 {
			@apply text-xl;
		}

		p {
			@apply mb-1 flex items-center;

			a {
				@apply inline-block select-text p-2 text-blue-800 underline hover:text-cyan-500 dark:text-blue-400;
			}
		}

		ol,
		ul {
			a {
				@apply select-text text-blue-800 underline hover:text-cyan-500 dark:text-blue-400;
			}
		}

		ol {
			@apply list-inside list-decimal;
		}

		ul {
			@apply list-inside list-disc;
		}

		pre {
			@apply rounded p-2;
		}
	}
</style>

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			http-equiv="X-UA-Compatible"
			content="IE=edge"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>{title}</title>
	</head>
	<body
		class="grid grid-rows-[auto_1fr] gap-2 bg-orange-100 p-2 text-black dark:bg-gray-800 dark:text-white"
	>
		<header class="flex select-none flex-row items-center justify-between">
			<a
				class:list={[
					'rounded-xl bg-cyan-400',
					'p-2',
					'font-mono text-3xl uppercase'
				]}
				href={appInfo.urlBase}
			>
				{appInfo.fullName}
			</a>
			<ThemeToggleButton />
		</header>

		<main class="markdown">
			<slot />
		</main>
	</body>
</html>
