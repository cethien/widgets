---
import App from './_app.astro'

import ThemeToggleButton from '~/components/ThemeToggleButton.astro'
import GithubButton from '~/components/GithubButton.astro'
import { appInfo } from '~/utils'

export interface Props {
	title: string
}

const { title } = Astro.props
---

<style lang="scss">
	@import url('https://fonts.googleapis.com/css2?family=Belanosima:wght@600&display=swap');
</style>

<App title={title}>
	<body
		class="grid grid-rows-[auto_1fr] gap-2 text-black dark:bg-slate-800 dark:text-white"
	>
		<header
			class:list={[
				'flex flex-row items-center justify-evenly',
				'px-4 py-1 bg-slate-50 dark:bg-slate-900 shadow-xl'
			]}
		>
			<a
				href={appInfo.urlBase}
				class:list={[
					"font-['Belanosima'] text-4xl hover:cursor-pointer",
					'bg-gradient-to-r from-purple-500 to-indigo-400 bg-clip-text text-transparent',
					'hover:from-fuchsia-300 hover:to-cyan-600 ease-in-out duration-500'
				]}
			>
				{appInfo.fullName}
			</a>

			<nav class="flex flex-row items-center justify-between gap-1">
				<GithubButton />
				<ThemeToggleButton />
			</nav>
		</header>

		<main class="flex flex-col items-center p-2 pt-8">
			<slot />
		</main>
	</body>
</App>

<script>
	import { initTheme } from '~/utils'
	initTheme()
</script>
